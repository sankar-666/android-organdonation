<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
android:background="#FFFEFE"
    android:layout_height="match_parent"



    tools:context=".Login">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:background="@drawable/dddd"
        android:layout_marginBottom="-140dp"
        android:layout_marginTop="50dp"
        android:layout_height="100dp"
         />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login here,"
        android:layout_marginTop="190dp"
        android:paddingRight="10dp"


        android:textStyle="bold"
        android:textSize="40dp"


        android:shadowColor = "#471414"
        android:shadowDx = "5"
        android:shadowDy = "6"
        android:shadowRadius = "9"


        android:textColor="#FDFDFD"
        />
    <TextView
        android:id="@+id/sd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please Sign to Continue"


        android:shadowColor = "#FFFFFF"
        android:shadowDx = "1"
        android:shadowDy = "3"
android:paddingLeft="70dp"
        android:shadowRadius = "1"
        android:textStyle="bold"
        android:textSize="11dp"



        android:textColor="#650C0C"
        />

    <EditText
        android:id="@+id/etuser"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Username.."
        android:textStyle="bold"
        android:background="@drawable/layout_bg"
        android:paddingLeft="65dp"
        android:textColorHint="#4C0707"
        android:textColor="#4C0808"

        android:layout_marginTop="30dp"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="202dp" />

    <EditText
        android:id="@+id/etpassw"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:ems="10"
        android:textStyle="bold"
        android:background="@drawable/layout_bg"
        android:inputType="textPassword"
        android:textColor="#4C0808"
        android:hint="Password.."

        android:textColorHint="#4C0808"
        android:layout_marginTop="10dp"
        android:paddingLeft="65dp"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="265dp" />



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btlogin"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"

        android:text="LOGIN"
        android:textStyle="bold"

        android:background="@drawable/custom_button"


        android:textColor="#fff"
        android:shadowRadius="2"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowColor="#5E5454"
        />

    <TextView
        android:id="@+id/txtreg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#810D0D"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_marginTop="150dp"
        android:text="New to Here? Reg now " />


</LinearLayout>